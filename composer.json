{
    "require": {
        "wikimedia/composer-merge-plugin": "dev-master",
        "slim/slim": "^3.0",
        "symfony/yaml": "^3.3"
    },
    "autoload": {
      "psr-4": {
        "Controller\\" : "src/controllers"
      }
    },
    "classmap": [
      "src/controllers"
    ],
    "extra": {
      "merge-plugin": {
        "include": [
          "services/*/composer.json"
        ],
        "recurse": true,
        "replace": false,
        "ignore-duplicates": false,
        "merge-dev": true,
        "merge-extra": false,
        "merge-extra-deep": false,
        "merge-scripts": false
      }
    }
}
